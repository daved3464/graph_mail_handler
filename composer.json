{
    "name": "hollow3464/graph-mail-handler",
    "description": "Simple Microsoft Graph API Mail Handler",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Hollow3464\\GraphMailHandler\\": "src/"
        }
    },
    "authors": [
        {
            "name": "David Chamorro",
            "email": "daved3464@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "fmt": "vendor/bin/pint",
        "lint": "vendor/bin/phpstan",
        "test": "vendor/bin/pest"
    },
    "require": {
        "guzzlehttp/guzzle": "^7.6",
        "guzzlehttp/psr7": "^2.4",
        "league/oauth2-client": "^2.7",
        "microsoft/microsoft-graph": "^1.110",
        "thenetworg/oauth2-azure": "^2.2"
    },
    "require-dev": {
        "laravel/pint": "^1.15.1",
        "pestphp/pest": "^2.34.7",
        "phpstan/phpstan": "^1.10.67"
    }
}
